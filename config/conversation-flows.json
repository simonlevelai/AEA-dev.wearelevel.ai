{
  "flows": {
    "greeting": {
      "triggers": ["hello", "hi", "hey", "good morning", "good afternoon", "good evening"],
      "condition": "isFirstMessage || isGreeting",
      "response": "botDisclosure",
      "followUp": ["ovarian_symptoms", "cervical_screening", "support_services", "nurse_contact"]
    },
    "ovarian_symptoms": {
      "triggers": ["ovarian cancer", "ovarian symptoms", "bloating", "pelvic pain"],
      "intent": "ovarian_cancer_info",
      "searchTerms": ["ovarian cancer symptoms", "ovarian cancer signs"],
      "fallback": "noContentFound"
    },
    "cervical_screening": {
      "triggers": ["cervical screening", "smear test", "cervix", "cervical cancer"],
      "intent": "cervical_screening_info", 
      "searchTerms": ["cervical screening", "smear test", "cervical cancer prevention"],
      "fallback": "noContentFound"
    },
    "support_services": {
      "triggers": ["support", "help", "counselling", "emotional support"],
      "intent": "support_services",
      "searchTerms": ["support services", "counselling", "emotional support"],
      "fallback": "directToNurse"
    },
    "nurse_contact": {
      "triggers": ["speak to nurse", "talk to nurse", "nurse line", "professional help"],
      "response": "nurseContact",
      "immediate": true
    },
    "symptoms_concern": {
      "triggers": ["worried about", "concerned about", "should I see", "is this normal"],
      "response": "seekMedicalAdvice",
      "escalate": true
    }
  },
  "responses": {
