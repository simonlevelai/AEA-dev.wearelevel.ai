{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "description": "Azure Function for automated GDPR data retention cleanup",
    "author": "Ask Eve Assist - Data Retention System",
    "version": "1.0.0"
  },
  "parameters": {
    "functionAppName": {
      "type": "string",
      "defaultValue": "askeve-data-retention-func",
      "metadata": {
        "description": "Name of the Azure Function App"
      }
    },
    "storageAccountName": {
      "type": "string",
      "defaultValue": "askevestorageprod", 
      "metadata": {
        "description": "Name of existing storage account"
      }
    },
    "applicationInsightsName": {
      "type": "string",
      "defaultValue": "askeve-prod-insights",
      "metadata": {
        "description": "Name of existing Application Insights"
      }
    },
    "environment": {
      "type": "string",
      "allowedValues": ["dev", "prod"],
      "defaultValue": "prod",
      "metadata": {
        "description": "Environment name"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "uksouth",
      "metadata": {
        "description": "Location for resources (UK compliance)"
      }
    },
    "nodeVersion": {
      "type": "string",
      "defaultValue": "20",
      "metadata": {
        "description": "Node.js version for Function App"
      }
    }
  },
  "variables": {
    "hostingPlanName": "[concat(parameters('functionAppName'), '-plan')]",
    "applicationInsightsName": "[parameters('applicationInsightsName')]",
    "storageConnectionString": "[concat('DefaultEndpointsProtocol=https;AccountName=', parameters('storageAccountName'), ';AccountKey=', listKeys(resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountName')), '2023-01-01').keys[0].value)]"
  },
  "resources": [
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2023-01-01",
      "name": "[variables('hostingPlanName')]",
      "location": "[parameters('location')]",
      "tags": {
        "Environment": "[parameters('environment')]",
        "Purpose": "GDPR Data Retention Cleanup",
        "CostCenter": "Healthcare-Compliance"
      },
      "sku": {
        "name": "Y1",
        "tier": "Dynamic",
        "size": "Y1",
        "family": "Y",
        "capacity": 0
      },
      "properties": {
        "computeMode": "Dynamic",
        "reserved": false
      }
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2023-01-01",
      "name": "[parameters('functionAppName')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', variables('hostingPlanName'))]"
      ],
      "kind": "functionapp",
      "identity": {
        "type": "SystemAssigned"
      },
      "tags": {
        "Environment": "[parameters('environment')]",
        "Purpose": "GDPR Data Retention Cleanup",
        "CostCenter": "Healthcare-Compliance",
        "Schedule": "Daily-02-00-GMT"
      },
      "properties": {
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('hostingPlanName'))]",
        "reserved": false,
        "isXenon": false,
        "hyperV": false,
        "siteConfig": {
          "appSettings": [
            {
              "name": "AzureWebJobsStorage",
              "value": "[variables('storageConnectionString')]"
            },
            {
              "name": "WEBSITE_CONTENTAZUREFILECONNECTIONSTRING", 
              "value": "[variables('storageConnectionString')]"
            },
            {
              "name": "WEBSITE_CONTENTSHARE",
              "value": "[toLower(parameters('functionAppName'))]"
            },
            {
              "name": "FUNCTIONS_EXTENSION_VERSION",
              "value": "~4"
            },
            {
              "name": "FUNCTIONS_WORKER_RUNTIME",
              "value": "node"
            },
            {
              "name": "WEBSITE_NODE_DEFAULT_VERSION",
              "value": "[concat('~', parameters('nodeVersion'))]"
            },
            {
              "name": "APPINSIGHTS_INSTRUMENTATION_KEY",
              "value": "[reference(resourceId('Microsoft.Insights/components', variables('applicationInsightsName')), '2020-02-02').InstrumentationKey]"
            },
            {
              "name": "APPLICATIONINSIGHTS_CONNECTION_STRING",
              "value": "[reference(resourceId('Microsoft.Insights/components', variables('applicationInsightsName')), '2020-02-02').ConnectionString]"
            },
            {
              "name": "AZURE_STORAGE_CONNECTION_STRING",
              "value": "[variables('storageConnectionString')]"
            },
            {
              "name": "GDPR_RETENTION_DAYS",
              "value": "30"
            },
            {
              "name": "DATA_RESIDENCY_REGION",
              "value": "[parameters('location')]"
            },
            {
              "name": "ENVIRONMENT",
              "value": "[parameters('environment')]"
            },
            {
              "name": "CLEANUP_SCHEDULE",
              "value": "0 2 * * *"
            },
            {
              "name": "TIMEZONE",
              "value": "GMT"
            }
          ],
          "ftpsState": "Disabled",
          "minTlsVersion": "1.2",
          "scmMinTlsVersion": "1.2",
          "use32BitWorkerProcess": false,
          "cors": {
            "allowedOrigins": ["*"]
          },
          "defaultDocuments": []
        },
        "httpsOnly": true,
        "redundancyMode": "None",
        "storageAccountRequired": false
      }
    },
    {
      "type": "Microsoft.Web/sites/functions",
      "apiVersion": "2023-01-01",
      "name": "[concat(parameters('functionAppName'), '/dataRetentionCleanup')]",
      "dependsOn": [
        "[resourceId('Microsoft.Web/sites', parameters('functionAppName'))]"
      ],
      "properties": {
        "script_root_path_href": "https://askeve-container-app.calmdesert-7b431664.uksouth.azurecontainerapps.io/",
        "script_href": "https://askeve-container-app.calmdesert-7b431664.uksouth.azurecontainerapps.io/",
        "config_href": "https://askeve-container-app.calmdesert-7b431664.uksouth.azurecontainerapps.io/",
        "href": "https://askeve-container-app.calmdesert-7b431664.uksouth.azurecontainerapps.io/",
        "config": {
          "bindings": [
            {
              "name": "myTimer",
              "type": "timerTrigger",
              "direction": "in",
              "schedule": "0 2 * * *"
            }
          ]
        }
      }
    }
  ],
  "outputs": {
    "functionAppName": {
      "type": "string",
      "value": "[parameters('functionAppName')]"
    },
    "functionUrl": {
      "type": "string", 
      "value": "[concat('https://', parameters('functionAppName'), '.azurewebsites.net')]"
    },
    "healthEndpoint": {
      "type": "string",
      "value": "[concat('https://', parameters('functionAppName'), '.azurewebsites.net/api/dataRetentionHealth')]"
    },
    "storageConnectionUsed": {
      "type": "string",
      "value": "[parameters('storageAccountName')]"
    },
    "scheduledTime": {
      "type": "string",
      "value": "02:00 GMT Daily"
    },
    "estimatedMonthlyCost": {
      "type": "string", 
      "value": "Â£1-2/month (Consumption Plan Y1)"
    }
  }
}